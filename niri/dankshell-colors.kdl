layout {
    background-color "transparent"

    focus-ring {
        active-color   "#d5bbfc"
        inactive-color "#958e99"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#d5bbfc"
        inactive-color "#958e99"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#d5bbfc"
        inactive-color "#958e99"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#d5bbfc80"
    }
}